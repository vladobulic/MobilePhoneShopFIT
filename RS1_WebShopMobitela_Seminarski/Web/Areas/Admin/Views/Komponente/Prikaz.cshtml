@model IEnumerable<Web.Areas.Admin.Models.KomponentePregledVM>


@{
    ViewData["Title"] = "View";
}
<br />
<a href="/Admin/TipKomponente/Prikaz">Pregled tipova komponenti</a>
<div>
    <a asp-action="Dodaj" class="btn btn-success">Dodaj komponentu</a>
</div>
<h1>View</h1>

<table class="table table-striped">
    <tr>
        <td>Ime</td>
        <td>Kolicina na skladistu</td>
        <td>Preporucena cijena</td>
        <td>Tip komponente</td>
        <td>Dobavljac</td>
        <td>Akcije</td>
    </tr>

    @foreach (var x in Model)
    {
<tr>
    <td>@x.Ime</td>
    <td>@x.KolicinaNaSkladistu</td>
    <td>@x.PreporucenaCijena</td>
    <td>@x.TipKomponente</td>
    <td>@x.dobavljac</td>
    <td>
        <a href="/Admin/Komponente/Obrisi?Id=@x.Id" class="btn btn-danger">Obrisi</a>
        <a href="/Admin/Komponente/Edit?Id=@x.Id" class="btn btn-primary">Edit</a>
    </td>
</tr>
    }


</table>

<a asp-action="Prikaz">Povratak</a>