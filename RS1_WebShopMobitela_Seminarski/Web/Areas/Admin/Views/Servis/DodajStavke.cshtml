@model StavkaServisaViewModel


@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@using DataAccessLayer



@{
    ViewData["Title"] = "Dodavanje stavke servisa";
}


<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Servis" asp-action="DodajStavke" method="post" class="form-horizontal" role="form">

                <div asp-validation-summary="All" class="text-danger"></div>
               

                <input asp-for="@Model.ServisId" type="hidden"/>
                

                <div class="form-group row">
                    <label class="col-2 col-form-label">Opis</label>
                    <div class="col-10">
                        <input asp-for="Ime" class="form-control">
                        <span asp-validation-for="Ime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-2 col-form-label">Cijena</label>
                    <div class="col-10">
                        <input asp-for="cijena" class="form-control" />
                        <span asp-validation-for="cijena" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-2 col-form-label">Komponenta</label>
                    <div class="col-10">
                        <select asp-for="komponentaId" asp-items="@Model.komponente" class="form-control"></select>
                    </div>
                </div>




                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Dodaj stavku servisa</button>
                    </div>
                </div>

            </form>
        </section>
    </div>

</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
