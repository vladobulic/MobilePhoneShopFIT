@model IzmjenaStatusaViewModel


<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Servis" asp-action="IzmjenuStatusSms" method="post" class="form-horizontal" role="form">

                <div asp-validation-summary="All" class="text-danger"></div>

                <input asp-for="@Model.ServisId" type="hidden"/>
                


                <div class="form-group row">
                    <label class="col-2 col-form-label">Broj klijenta: </label>
                    <div class="col-10">
                        <input asp-for="To" class="form-control">
                        <span asp-validation-for="To" class="text-danger"></span>
                    </div>
                </div>
              
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Izmjeni status</button>
                    </div>
                </div>

            </form>
        </section>
    </div>

</div>
<h2>
    @ViewBag.MessageId<h2>
    <h3>@ViewBag.Error</h3>

    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }



