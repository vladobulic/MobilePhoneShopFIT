@using Microsoft.AspNetCore.Identity
@using Web.Areas.Customer.Models
@using DataAccessLayer

@model List<Narudzba>
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@if (User.Identity.IsAuthenticated)
{


    @foreach (var item in Model)
    {

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css">
        <div class="container padding-bottom-3x mb-1">
            <div class="card mb-3">
                <div class="p-4 text-center text-white text-lg bg-dark rounded-top"><span class="text-uppercase">Tracking Broj - </span><span class="text-medium">@item.Id</span></div>
                <div class="d-flex flex-wrap flex-sm-nowrap justify-content-between py-3 px-2 bg-secondary">
                    @foreach (var mobitel in item.StavkaNarudzbe)
                    {
                        <div class="w-100 text-center py-1 px-2"><span class="text-medium">Artikal: </span>@mobitel.Mobitel.Naziv, @mobitel.Cijena KM </div>
                    }


                </div>

                <div class="card-body">
                    <div class="steps d-flex flex-wrap flex-sm-nowrap justify-content-between padding-top-2x padding-bottom-1x">

                        <div class="step @(item.Stanje >= 1 ? "completed" : "")">
                            <div class="step-icon-wrap">
                                <div class="step-icon"><i class="pe-7s-cart"></i></div>
                            </div>
                            <h4 class="step-title">Confirmed Order</h4>
                        </div>
                        <div class="step @(item.Stanje >= 2 ? "completed" : "")">
                            <div class="step-icon-wrap">
                                <div class="step-icon"><i class="pe-7s-config"></i></div>
                            </div>
                            <h4 class="step-title">Processing Order</h4>
                        </div>
                        <div class="step @(item.Stanje >= 3 ? "completed" : "")">
                            <div class="step-icon-wrap">
                                <div class="step-icon"><i class="pe-7s-medal"></i></div>
                            </div>
                            <h4 class="step-title">Quality Check</h4>
                        </div>
                        <div class="step @(item.Stanje >= 4 ? "completed" : "")">
                            <div class="step-icon-wrap">
                                <div class="step-icon"><i class="pe-7s-car"></i></div>
                            </div>
                            <h4 class="step-title">Product Dispatched</h4>
                        </div>
                        <div class="step @(item.Stanje >= 5 ? "completed" : "")">
                            <div class="step-icon-wrap">
                                <div class="step-icon"><i class="pe-7s-home"></i></div>
                            </div>
                            <h4 class="step-title">Product Delivered</h4>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    }
}


<h2>Ovdje mozete vidjeti svoje narudzbe, zahvaljujemo se na povjerenju. </h2>

