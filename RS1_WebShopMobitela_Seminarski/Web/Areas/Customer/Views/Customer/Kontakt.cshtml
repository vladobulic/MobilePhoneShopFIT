<!-- Contact -->
<section class="container">

    <!--Contact heading-->
    <h2 class="h1 m-0">Kontaktirajte nas</h2>
    <!--Contact description-->
    <p class="pb-4">Uvijek smo na raspolaganjusa</p>

    <div class="row">

        <!--Grid column-->
        <div class="col-lg-5 mb-4">

            <!--Form with header-->
            <div class="card border-primary rounded-0">

                <div class="card-header p-0">
                    <div class="bg-primary text-white text-center py-2">
                        <h3><i class="fa fa-envelope"></i> Write to us:</h3>
                        <p class="m-0">We'll write rarely, but only the best content.</p>
                    </div>
                </div>
                <div class="card-body p-3">

                    <!--Body-->
                    <div class="form-group">
                        <label>Vase Ime</label>
                        <div class="input-group">
                            <div class="input-group-addon bg-light"><i class="fa fa-user text-primary"></i></div>
                            <input type="text" class="form-control" id="inlineFormInputGroupUsername" placeholder="Ime">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Vas email</label>
                        <div class="input-group mb-2 mb-sm-0">
                            <div class="input-group-addon bg-light"><i class="fa fa-envelope text-primary"></i></div>
                            <input type="text" class="form-control" id="inlineFormInputGroupUsername" placeholder="Email">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label>Poruka</label>
                        <div class="input-group mb-2 mb-sm-0">
                            <div class="input-group-addon bg-light"><i class="fa fa-pencil text-primary"></i></div>
                            <textarea class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="text-center">
                        <button class="btn btn-primary btn-block rounded-0 py-2">Submit</button>
                    </div>

                </div>

            </div>
            <!--Form with header-->

        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-lg-7">

            <!--Google map-->
            <div class="mb-4">

            </div>

            <!--Buttons-->
            <div class="row text-center">
                <div class="col-md-4">
                    <a class="bg-primary px-3 py-2 rounded text-white mb-2 d-inline-block"><span class="oi oi-location" title="lokacija" aria-hidden="true"></span></a>
                    <p>Mostar, Sjeverni Logor 94126,<br> BiH</p>

                </div>

                <div class="col-md-4">
                    <a class="bg-primary px-3 py-2 rounded text-white mb-2 d-inline-block"><span class="oi oi-phone" title="mobitel" aria-hidden="true"></span></a>
                    <p>+ 01 234 567 89, <br> Pon - Pet, 8:00-22:00</p>
                </div>

                <div class="col-md-4">
                    <a class="bg-primary px-3 py-2 rounded text-white mb-2 d-inline-block"><span class="oi oi-inbox" title="basket" aria-hidden="true"></span></a>
                    <p>info@webshop.com <br> sale@webshop.com</p>
                </div>
            </div>

        </div>
        <!--Grid column-->

    </div>

</section>
