@model List<Novosti> 
@{
}

    <div class="col-md-12">
        @foreach (var novost in Model)
        {
            <h1>@novost.Naslov</h1>
            <p>
                @novost.SadrzajTekst
            </p>
            <div>
                <span class="badge">Objavljeno @novost.Datum.ToShortDateString()</span><div class="pull-right">
                </div>
            </div>
            <hr>
        }


        
    </div>
                            
                       
                          