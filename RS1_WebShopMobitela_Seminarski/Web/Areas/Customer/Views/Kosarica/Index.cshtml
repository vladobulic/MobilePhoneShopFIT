@using Microsoft.AspNetCore.Identity
@using Web.Areas.Customer.Models.ManageViewModels
@using DataAccessLayer

@model KosaricaIndexViewModel
@{
}
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="container mb-4">
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col"> </th>
                            <th scope="col">Produkt</th>
                            <th scope="col">Dostupnost</th>
                            <th scope="col" class="text-center">Kolicina</th>
                            <th scope="col" class="text-right">Cijena</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                        <tr>
                            <td><img src="https://dummyimage.com/50x50/55595c/fff" /> </td>
                            <td> <a asp-area="Customer" asp-controller="Mobitel" asp-action="Index" asp-route-id="@item.Product.Id">@item.Product.mobitel.Naziv</a></td>
                            <td>U skladistu: @item.Product.mobitel.StanjeNaSkladistu</td>
                            <td class="text-right">@item.Quantity</td>
                            <td class="text-right">@item.Product.mobitel.Cijena</td>
                            <td class="text-right"><a asp-area="Customer" asp-controller="Kosarica" asp-action="Brisi" asp-route-id="@item.Product.Id" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> </a> </td>
                        </tr>
                        }

                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><strong>Total</strong></td>
                            <td class="text-right"><strong>@Model.TotalPrice KM</strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col mb-2">
            <div class="row">
                <div class="col-sm-12  col-md-6">
                    <a asp-area="Customer" asp-controller="Customer" asp-action="Index" class="btn btn-block btn-light">Nastavite kupovinu</a>
                </div>

                <div class="col-sm-12 col-md-6 text-right">
                    <a asp-area="Customer" asp-controller="Narudzba" asp-action="Index" class="btn btn-lg btn-block btn-primary">Narucite</a>
                </div>

            </div>

        </div>
    </div>
</div>
